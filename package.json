{
  "name": "marble-schematics",
  "version": "1.0.0",
  "description": "Schematics collection for Marble.js",
  "repository": "git@github.com:Edouardbozon/marble-schematics.git",
  "author": "Koala <bozonedouard@gmail.com>",
  "license": "MIT",
  "schematics": "./collection.json",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:clean:launch": "yarn build && yarn clean:launch",
    "clean": "git checkout HEAD -- sandbox && git clean -f -d sandbox",
    "clean:launch": "yarn clean && yarn launch",
    "launch": "cd sandbox && npx -p @angular-devkit/schematics schematics",
    "link:schematic": "yarn link && cd sandbox && yarn link marble-schematics",
    "publish": "yarn test && PUBLISH_CMD",
    "test": "yarn build:clean:launch && yarn test:sandbox && yarn clean",
    "test:sandbox": "cd sandbox && yarn lint && yarn test && yarn e2e && yarn build",
    "test:unit": "yarn build && jasmine src/**/*_spec.js"
  },
  "keywords": [
    "schematics",
    "Marble.js"
  ],
  "dependencies": {
    "@angular-devkit/core": "7.3.8",
    "@angular-devkit/schematics": "7.3.8",
    "@types/jasmine": "3.3.12",
    "@types/node": "12.0.0",
    "jasmine": "3.4.0",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "prettier": "1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
