{
  "name": "marble-schematics",
  "version": "0.0.0",
  "description": "Schematics collection for Marble.js",
  "repository": "git@github.com:Edouardbozon/marble-schematics.git",
  "author": "Edouard Bozon <bozonedouard@gmail.com>",
  "license": "MIT",
  "schematics": "./collection.json",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:clean:execute": "yarn build && yarn clean:execute",
    "clean": "git checkout HEAD -- sandbox && git clean -f -d sandbox",
    "clean:execute": "yarn clean && yarn execute",
    "execute": "cd sandbox && schematics",
    "link:schematic": "yarn link && cd sandbox && yarn link marble-schematics",
    "publish": "yarn test && PUBLISH_CMD",
    "test": "yarn build:clean:execute && yarn test:sandbox && yarn clean",
    "test:sandbox": "cd sandbox && yarn lint && yarn test && yarn e2e && yarn build",
    "test:unit": "yarn build && jasmine src/**/*_spec.js"
  },
  "keywords": [
    "schematics",
    "Marble.js",
    "CLI"
  ],
  "dependencies": {
    "@angular-devkit/core": "8.3.25",
    "@angular-devkit/schematics": "8.3.25",
    "@types/jasmine": "3.5.0",
    "@types/node": "13.1.6",
    "jasmine": "3.5.0",
    "typescript": "3.9.6"
  },
  "devDependencies": {
    "@angular-devkit/schematics-cli": "0.900.1",
    "husky": "4.0.7",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
