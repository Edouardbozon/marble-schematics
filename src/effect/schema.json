{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsEffect",
  "title": "Marble.js Effect Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the effect.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you want to use for this effect?"
    },
    "method": {
      "description": "The HTTP method of the effect.",
      "type": "string",
      "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "default": "GET",
      "x-prompt": {
        "message": "Which HTTP method would you want to use?",
        "type": "list",
        "items": [
          { "value": "GET", "label": "GET" },
          {
            "value": "POST",
            "label": "POST"
          },
          {
            "value": "PUT",
            "label": "PUT"
          },
          {
            "value": "PATCH",
            "label": "PATCH"
          },
          {
            "value": "DELETE",
            "label": "DELETE"
          }
        ]
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The HTTP path of the effect.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What HTTP path would you want to use?"
    },
    "createRouteCombination": {
      "type": "boolean",
      "description": "Create route combination.",
      "default": true,
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Would you want to create route combination?"
    },
    "routeCombinationPath": {
      "type": "string",
      "format": "path",
      "description": "Add the effect to an existing route combination."
    },
    "directory": {
      "type": "string",
      "format": "path",
      "description": "The path to create the effect?",
      "visible": false
    }
  },
  "required": ["name", "path", "method"]
}
